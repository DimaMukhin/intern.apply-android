<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="intern.apply.internapply.view.viewjobactivity.ViewJobActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/jobView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusableInTouchMode="true" >

            <TextView
                android:id="@+id/jobTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="16dp"
                android:padding="0dp"
                android:scrollHorizontally="false"
                android:textAlignment="viewStart"
                android:textColor="@android:color/background_dark"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jobOrganization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:padding="0dp"
                android:text=""
                android:textAlignment="viewStart"
                android:textColor="@android:color/background_dark"
                android:textSize="24sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/jobLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:padding="0dp"
                android:text=""
                android:textAlignment="viewStart"
                android:textColor="@android:color/background_dark"
                android:textSize="24sp"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:numStars="5"
                    android:stepSize="1"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/votes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/ratingBar"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:visibility="visible" />
            </RelativeLayout>

            <TextView
                android:id="@+id/jobSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:padding="0dp"
                android:textColor="@android:color/background_dark"
                android:textStyle="italic"
                android:textSize="20sp" />

            <Button
                android:id="@+id/salaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter your salary" />

            <TextView
                android:id="@+id/jobDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:gravity="top"
                android:padding="0dp"
                android:textColor="@android:color/background_dark"
                android:textSize="24sp"
                tools:text="" />

            <Button
                android:id="@+id/jobApply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:padding="0dp"
                android:text="@string/apply"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="viewComments"
                android:text="@string/comments" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="30dp"
                android:text="@string/add_a_comment"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="24sp"
                tools:text="Send us a message" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/your_name"
                android:inputType="textEmailSubject"
                android:paddingBottom="5dp" />

            <EditText
                android:id="@+id/etMessageComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/message"
                android:inputType="textMultiLine|textShortMessage"
                android:paddingBottom="5dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="sendMessage"
                android:text="@string/send" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
